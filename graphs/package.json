{
  "name": "@syspons/monitoring-ai-graphs",
  "version": "0.2.2",
  "description": "LangGraph implementations for monitoring AI workflows",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "start:debug": "tsc-watch --noClear -p tsconfig.json --onSuccess 'bash ../.vscode/debug.graphs.sh'",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "npx @langchain/langgraph-cli dev",
    "chroma:start": "npx chroma run --path ./chroma_data --port 8000",
    "chroma:stop": "pkill -f 'chroma run' || true"
  },
  "dependencies": {
    "@syspons/monitoring-ai-common": "^0.2.2",
    "cheerio": "^1.1.0",
    "chromadb": "^3.1.6",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.5",
    "mammoth": "^1.11.0",
    "pdf-parse": "^1.1.4",
    "tiktoken": "^1.0.22",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@langchain/community": "^1.1.1",
    "@langchain/core": "^1.1.0",
    "@langchain/langgraph": "^1.0.2",
    "@langchain/openai": "^1.1.2"
  },
  "peerDependenciesMeta": {
    "@langchain/community": {
      "optional": true
    },
    "@langchain/core": {
      "optional": false
    },
    "@langchain/langgraph": {
      "optional": false
    },
    "@langchain/openai": {
      "optional": true
    }
  },
  "devDependencies": {
    "@langchain/community": "^1.1.1",
    "@langchain/core": "^1.1.0",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/langgraph-cli": "1.0.3",
    "@langchain/openai": "^1.2.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.0",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "config": {
    "debug_version": 0
  }
}
